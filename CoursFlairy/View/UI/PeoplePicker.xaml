<UserControl x:Class="CoursFlairy.View.UI.PeoplePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CoursFlairy.View.UI"
             xmlns:converter="clr-namespace:CoursFlairy.ViewModel.UI"
             mc:Ignorable="d" d:DataContext="{Binding RelativeSource={RelativeSource Self}}"
             d:DesignHeight="150" d:DesignWidth="700" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <converter:PeoplePickerHalfOfWidthConverter x:Key="PeoplePickerHalfOfWidthConverter"/>
        <converter:PeoplePickerLeftBorderRoundConverter x:Key="PeoplePickerLeftBorderRoundConverter"/>
        <converter:PeoplePickerRightBorderRoundConverter x:Key="PeoplePickerRightBorderRoundConverter"/>
        <converter:PeoplePickerMinusButtonColor x:Key="PeoplePickerMinusButtonColor"/>
        <converter:PeoplePickerPlusButtonColor x:Key="PeoplePickerPlusButtonColor"/>
    </UserControl.Resources>

    <Grid DataContext="{Binding RelativeSource={RelativeSource AncestorLevel=1, AncestorType=UserControl, Mode=FindAncestor}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="0.20*"/>
            <ColumnDefinition Width="0.05*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Border Background="{DynamicResource White}" Grid.Column="2" Grid.ColumnSpan="5" Grid.RowSpan="4" Margin="5" CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="4" ShadowDepth="1" Color="{DynamicResource Shadow}" Direction="270" Opacity="0.3" />
            </Border.Effect>
        </Border>

        <!--Категорії-->
        <Grid x:Name="Category" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2">
            <Grid.Resources>
                <Style TargetType="Grid" x:Key="PlusMinusG">
                    <Setter Property="Background" Value="Transparent"/>
                    <EventSetter Event="MouseEnter" Handler="GridAnimation_MouseEnter"/>
                    <EventSetter Event="MouseLeave" Handler="GridAnimation_MouseLeave"/>
                </Style>

                <Style TargetType="Border" x:Key="Num">
                    <Setter Property="Background" Value="{DynamicResource White}"/>
                    <Setter Property="Cursor" Value="IBeam"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="Grid.Row" Value="1"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="CornerRadius" Value="2"/>
                    <EventSetter Event="PreviewMouseDown" Handler="Border_MouseDown"/>
                    <EventSetter Event="MouseEnter" Handler="BorderAnimtion_MouseEnter"/>
                    <EventSetter Event="MouseLeave" Handler="BorderAnimation_MouseLeave"/>
                </Style>

                <Style TargetType="Ellipse">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="Fill" Value="{DynamicResource White}"/>
                    <Setter Property="Height" Value="{Binding Path=ActualWidth, RelativeSource={RelativeSource Self}}"/>
                </Style>

                <Style TargetType="TextBlock">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="HorizontalAlignment" Value="Right"/>
                    <Setter Property="FontFamily" Value="Bahnschrift"/>
                    <Setter Property="Foreground" Value="{DynamicResource MainColor100}"/>
                    <Setter Property="FontSize" Value="20"/>
                </Style>

                <Style TargetType="TextBox">
                    <Setter Property="FontFamily" Value="Bahnschrift"/>
                    <Setter Property="Margin" Value="0, 0, 0, -1"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                    <Setter Property="MaxLength" Value="2"/>
                    <Setter Property="IsHitTestVisible" Value="False"/>
                    <Setter Property="CaretBrush">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Offset="0" Color="Transparent"/>
                                <GradientStop Offset="0.109" Color="Transparent"/>
                                <GradientStop Offset="0.11" Color="{DynamicResource Shadow}"/>
                                <GradientStop Offset="0.79" Color="{DynamicResource Shadow}"/>
                                <GradientStop Offset="0.791" Color="Transparent"/>
                                <GradientStop Offset="1" Color="Transparent"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <EventSetter Event="DataObject.Pasting" Handler="TextBox_Pasting"/>
                    <EventSetter Event="PreviewTextInput" Handler="TextBox_PreviewTextInput"/>
                    <EventSetter Event="PreviewKeyDown" Handler="TextBox_PreviewKeyDown"/>
                    <EventSetter Event="GotFocus" Handler="TextBoxAnimation_GotFocus"/>
                    <EventSetter Event="LostFocus" Handler="TextBox_LostFocus"/>

                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TextBox">
                                <Border Background="Transparent" BorderBrush="Transparent" BorderThickness="0">
                                    <ScrollViewer x:Name="PART_ContentHost" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter TargetName="PART_ContentHost" Property="Opacity" Value="1" />
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="PART_ContentHost" Property="Opacity" Value="1" />
                                    </Trigger>
                                    <Trigger Property="IsReadOnly" Value="True">
                                        <Setter TargetName="PART_ContentHost" Property="Opacity" Value="1" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
                
                <Style TargetType="TextBlock" x:Key="PlusMinus">
                    <Setter Property="FontFamily" Value="Cascadia Mono"/>
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.7*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="0.7*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition Width="1.6*"/>
                <ColumnDefinition Width="0.2*"/>
                <ColumnDefinition Width="0.2*"/>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition Width="0.55*"/>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition Width="0.2*"/>
                <ColumnDefinition Width="0.25*"/>
            </Grid.ColumnDefinitions>

            <!--Немовлята-->
            <Viewbox Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right">
                <TextBlock Text="Немовлята:"/>
            </Viewbox>

            <Grid Grid.Row="1" Grid.Column="3" Name="bm" MouseDown="Minus_MouseDown">
                <Ellipse>
                    <Ellipse.Effect>
                        <DropShadowEffect BlurRadius="2" ShadowDepth="0.5" Color="{DynamicResource Shadow}" Direction="320" Opacity="0.4" />
                    </Ellipse.Effect>
                </Ellipse>
                <Viewbox>
                    <TextBlock Text="-" Style="{StaticResource PlusMinus}" Foreground="{Binding Baby, Converter={StaticResource PeoplePickerMinusButtonColor}}"/>
                </Viewbox>
            </Grid>

            <Grid Grid.Row="1" Grid.Column="5">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="20*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border Style="{StaticResource Num}">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="2" ShadowDepth="0.5" Color="{DynamicResource Shadow}" Direction="320" Opacity="0.3" />
                    </Border.Effect>
                    
                    <Viewbox>
                        <TextBox x:Name="bt" Text="{Binding Baby, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Stretch"/>
                    </Viewbox>
                </Border>
            </Grid>

            <Grid Grid.Row="1" Grid.Column="7" Name="bp" MouseDown="Plus_MouseDown" Style="{StaticResource PlusMinusG}">
                <Ellipse>
                    <Ellipse.Effect>
                        <DropShadowEffect BlurRadius="2" ShadowDepth="0.5" Color="{DynamicResource Shadow}" Direction="320" Opacity="0.4" />
                    </Ellipse.Effect>
                </Ellipse>

                <Viewbox>
                    <TextBlock Text="+" Style="{StaticResource PlusMinus}" Foreground="{Binding Baby, Converter={StaticResource PeoplePickerPlusButtonColor}}"/>
                </Viewbox>
            </Grid>

            <!--Діти-->
            <Viewbox Grid.Row="3" Grid.Column="1"  HorizontalAlignment="Right">
                <TextBlock Text="Діти:"  Grid.Row="3" Grid.Column="1"/>
            </Viewbox>

            <Grid Grid.Row="3" Grid.Column="3" Name="cm" MouseDown="Minus_MouseDown" Background="Transparent" Style="{StaticResource PlusMinusG}">
                <Ellipse>
                    <Ellipse.Effect>
                        <DropShadowEffect BlurRadius="2" ShadowDepth="0.5" Color="{DynamicResource Shadow}" Direction="320" Opacity="0.4" />
                    </Ellipse.Effect>
                </Ellipse>
                <Viewbox>
                    <TextBlock Text="-" Style="{StaticResource PlusMinus}" Foreground="{Binding Child, Converter={StaticResource PeoplePickerMinusButtonColor}}"/>
                </Viewbox>
            </Grid>

            <Grid Grid.Row="3" Grid.Column="5">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="20*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border Style="{StaticResource Num}">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="2" ShadowDepth="0.5" Color="{DynamicResource Shadow}" Direction="320" Opacity="0.3" />
                    </Border.Effect>
                    
                    <Viewbox>
                        <TextBox Name="ct" Text="{Binding Child, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </Viewbox>
                </Border>
            </Grid>

            <Grid Grid.Row="3" Grid.Column="7" Name="cp" MouseDown="Plus_MouseDown" Background="Transparent"  Style="{StaticResource PlusMinusG}">
                <Ellipse>
                    <Ellipse.Effect>
                        <DropShadowEffect BlurRadius="2" ShadowDepth="0.5" Color="{DynamicResource Shadow}" Direction="320" Opacity="0.4" />
                    </Ellipse.Effect>
                </Ellipse>
                <Viewbox>
                    <TextBlock Text="+" Style="{StaticResource PlusMinus}" Foreground="{Binding Child, Converter={StaticResource PeoplePickerPlusButtonColor}}"/>
                </Viewbox>
            </Grid>

            <!--Дорослі-->
            <Viewbox  Grid.Row="5" Grid.Column="1" HorizontalAlignment="Right">
                <TextBlock Text="Дорослі:" Grid.Row="5"/>
            </Viewbox>

            <Grid Grid.Row="5" Grid.Column="3" Name="am" MouseDown="Minus_MouseDown" Background="Transparent"  Style="{StaticResource PlusMinusG}">
                <Ellipse>
                    <Ellipse.Effect>
                        <DropShadowEffect BlurRadius="2" ShadowDepth="0.5" Color="{DynamicResource Shadow}" Direction="320" Opacity="0.4" />
                    </Ellipse.Effect>
                </Ellipse>
                <Viewbox>
                    <TextBlock Text="-" Style="{StaticResource PlusMinus}" Foreground="{Binding Adult, Converter={StaticResource PeoplePickerMinusButtonColor}}"/>
                </Viewbox>
            </Grid>

            <Grid Grid.Row="5" Grid.Column="5">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="20*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border Style="{StaticResource Num}">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="2" ShadowDepth="0.5" Color="{DynamicResource Shadow}" Direction="320" Opacity="0.3" />
                    </Border.Effect>
                    
                    <Viewbox>
                        <TextBox x:Name="at" Text="{Binding Adult, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </Viewbox>
                </Border>
            </Grid>

            <Grid Grid.Row="5" Grid.Column="7" Name="ap" MouseDown="Plus_MouseDown" Background="Transparent"  Style="{StaticResource PlusMinusG}">
                <Ellipse>
                    <Ellipse.Effect>
                        <DropShadowEffect BlurRadius="2" ShadowDepth="0.5" Color="{DynamicResource Shadow}" Direction="320" Opacity="0.4" />
                    </Ellipse.Effect>
                </Ellipse>
                <Viewbox>
                    <TextBlock Text="+" Style="{StaticResource PlusMinus}" Foreground="{Binding Adult, Converter={StaticResource PeoplePickerPlusButtonColor}}"/>
                </Viewbox>
            </Grid>

            <!--Пенсіонери-->
            <Viewbox Grid.Row="7" Grid.Column="1" HorizontalAlignment="Right">
                <TextBlock Text="Пенсіонери:"/>
            </Viewbox>

            <Grid Grid.Row="7" Grid.Column="3" Name="pm" MouseDown="Minus_MouseDown" Background="Transparent" Style="{StaticResource PlusMinusG}">
                <Ellipse>
                    <Ellipse.Effect>
                        <DropShadowEffect BlurRadius="2" ShadowDepth="0.5" Color="{DynamicResource Shadow}" Direction="320" Opacity="0.4" />
                    </Ellipse.Effect>
                </Ellipse>
                <Viewbox>
                    <TextBlock Text="-" Style="{StaticResource PlusMinus}" Foreground="{Binding Pensioner, Converter={StaticResource PeoplePickerMinusButtonColor}}"/>
                </Viewbox>
            </Grid>

            <Grid Grid.Row="7" Grid.Column="5">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="20*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border Style="{StaticResource Num}">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="2" ShadowDepth="0.5" Color="{DynamicResource Shadow}" Direction="320" Opacity="0.3" />
                    </Border.Effect>
                    
                    <Viewbox>
                        <TextBox x:Name="pt" Text="{Binding Pensioner, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </Viewbox>
                </Border>
            </Grid>

            <Grid Grid.Row="7" Grid.Column="7" Name="pp" MouseDown="Plus_MouseDown" Background="Transparent" Style="{StaticResource PlusMinusG}">
                <Ellipse>
                    <Ellipse.Effect>
                        <DropShadowEffect BlurRadius="2" ShadowDepth="0.5" Color="{DynamicResource Shadow}" Direction="320" Opacity="0.4" />
                    </Ellipse.Effect>
                </Ellipse>
                <Viewbox>
                    <TextBlock Text="+" Style="{StaticResource PlusMinus}" Foreground="{Binding Pensioner, Converter={StaticResource PeoplePickerPlusButtonColor}}"/>
                </Viewbox>
            </Grid>
        </Grid>

        <!--Класи-->
        <Border x:Name="border" Background="{DynamicResource White}" BorderThickness="1.5" CornerRadius="{Binding Path=ActualHeight, RelativeSource={RelativeSource Self}, Converter={StaticResource PeoplePickerHalfOfWidthConverter}}" Grid.Column="3" Grid.Row="2">
            <Border.Effect>
                <DropShadowEffect BlurRadius="3.5" ShadowDepth="0.3" Color="{DynamicResource Shadow}" Direction="320" Opacity="0.3" />
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!--Економ-->
                <Grid Name="Economy" Grid.RowSpan="3" Grid.Column="0" PreviewMouseDown="Grid_PreviewMouseDown" MouseEnter="GridAnimation_MouseEnter" MouseLeave="GridAnimation_MouseLeave">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="8*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>

                    <Border Background="Transparent" Grid.RowSpan="3" CornerRadius="{Binding Path=ActualHeight, RelativeSource={RelativeSource Self}, Converter={StaticResource PeoplePickerLeftBorderRoundConverter}}">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="3.5" ShadowDepth="0.3" Color="{DynamicResource Shadow}" Direction="320" Opacity="0.3" />
                        </Border.Effect>
                    </Border>

                    <Viewbox Grid.ColumnSpan="2" Grid.Row="1">
                        <TextBlock Text="Економ" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource MainColor100}" FontFamily="Bahnschrift"/>
                    </Viewbox>
                </Grid>

                <!--Бізнес-->
                <Grid x:Name="Business" Grid.RowSpan="3" Grid.Column="1" PreviewMouseDown="Grid_PreviewMouseDown"  MouseEnter="GridAnimation_MouseEnter" MouseLeave="GridAnimation_MouseLeave">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="8*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>

                    <Border Background="Transparent" Grid.Column="1" Grid.RowSpan="3">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="3.5" ShadowDepth="0.3" Color="{DynamicResource Shadow}" Direction="320" Opacity="0.3" />
                        </Border.Effect>
                    </Border>

                    <Viewbox Grid.ColumnSpan="2" Grid.Row="1">
                        <TextBlock Text="Бізнес" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource MainColor100}" FontFamily="Bahnschrift"/>
                    </Viewbox>
                </Grid>

                <!--Перший-->
                <Grid x:Name="First" Grid.RowSpan="3" Grid.Column="2" PreviewMouseDown="Grid_PreviewMouseDown" MouseEnter="GridAnimation_MouseEnter" MouseLeave="GridAnimation_MouseLeave">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="8*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>

                    <Border Background="Transparent" Grid.RowSpan="3" CornerRadius="{Binding Path=ActualHeight, RelativeSource={RelativeSource Self}, Converter={StaticResource PeoplePickerRightBorderRoundConverter}}">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="3.5" ShadowDepth="0.3" Color="{DynamicResource Shadow}" Direction="320" Opacity="0.3" />
                        </Border.Effect>
                    </Border>

                    <Viewbox Grid.ColumnSpan="2" Grid.Row="1">
                        <TextBlock Text="Перший" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource MainColor100}" FontFamily="Bahnschrift"/>
                    </Viewbox>
                </Grid>

                <Line Grid.ColumnSpan="2" HorizontalAlignment="Center" X1="0" X2="0" Y1="0" Y2="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Grid}}" Stroke="{DynamicResource MainColor10}" StrokeThickness="0.8" VerticalAlignment="Bottom"/>
                <Line Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" X1="0" X2="0" Y1="0" Y2="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Border}}" Stroke="{DynamicResource MainColor10}" StrokeThickness="0.8" VerticalAlignment="Bottom"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
