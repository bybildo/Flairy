<Window x:Class="CoursFlairy.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:UI="clr-namespace:CoursFlairy.View.UI"
        mc:Ignorable="d"
        ResizeMode="NoResize" Width="1536" Height="824" Left="0" Top="0"
        Title="MainWindow"  
        WindowStyle="None"
        AllowsTransparency="True"
        Loaded="Form1_Load">

    <Window.Resources>
        <Style TargetType="Grid" x:Key="Highlight">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource HighlightingSelectionMainWindow}" />
                </Trigger>
                <Trigger Property="IsMouseOver" Value="False">
                    <Setter Property="Background" Value="Transparent" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="19*"/>
        </Grid.RowDefinitions>

        <!--Верхня Частина-->
        <Grid Background="{DynamicResource PanelGradient}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="15*"/>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>

            <!--Логотип-->
            <Grid Background="Transparent">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseDown">
                        <i:InvokeCommandAction Command="{Binding Icon_MouseDown}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>

                <Grid.RowDefinitions>
                    <RowDefinition Height="1.1*"/>
                    <RowDefinition Height="8*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="14*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Path Grid.Row="1" Grid.Column="1" Fill="{DynamicResource White}" Stretch="Uniform" Data="{DynamicResource logo}"/>
            </Grid>

            <!--Аккаунт-->
            <Grid Grid.Column="2" Style="{DynamicResource Highlight}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseDown">
                        <i:InvokeCommandAction Command="{Binding Account_MouseDown}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>

                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="2.5*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <Path Grid.Row="1" Fill="{DynamicResource White}" Stretch="Uniform" Data="{DynamicResource account}"/>
            </Grid>

            <!--Вийти-->
            <Grid Grid.Column="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2.5*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="2.4*"/>
                    <RowDefinition Height="0.3*"/>
                    <RowDefinition Height="2.4*"/>
                </Grid.RowDefinitions>

                <Path Grid.Row="1" Fill="{DynamicResource White}" Stretch="Uniform" Data="{DynamicResource cross}"/>
                <Grid Grid.RowSpan="3" Style="{DynamicResource Highlight}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDown">
                            <i:InvokeCommandAction Command="{Binding Close_MouseDown}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Grid>
                <Line X1="0" Y1="0" X2="13" Y2="0" Stroke="{DynamicResource White}" StrokeThickness="1.2" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <Grid Grid.Row="2" Grid.RowSpan="3" Style="{DynamicResource Highlight}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDown">
                            <i:InvokeCommandAction Command="{Binding Сollapse_MouseDown}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Grid>
            </Grid>
        </Grid>

        <!--Нижня Частина-->
        <Frame x:Name="PageManager" Grid.Row="1" NavigationUIVisibility="Hidden" Source="SearchPage.xaml"/>

        <UI:ShowMessage Foreground="{DynamicResource MainColor100}" BorderBackground="{DynamicResource White}" x:Name="GlobalMessage" Visibility="Visible" Grid.ColumnSpan="10" Grid.RowSpan="10"/>
    </Grid>
</Window>
